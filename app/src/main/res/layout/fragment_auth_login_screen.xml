<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthLoginFragment">

    <RelativeLayout
        android:id="@+id/authrelative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/loginlinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заходи, гостем будешь"
                android:textColor="@color/black"
                android:textColorHighlight="@color/purple_500"
                android:shadowColor="@color/black"
                android:shadowRadius="2"
                android:textSize="30sp"/>
            <EditText
                android:id="@+id/logintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Логин"/>
            <EditText
                android:id="@+id/passwordtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:hint="Пароль"/>
            <Button
                android:id="@+id/loginbutton"
                android:theme="@style/Button.Purple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Зайти"
                android:autoSizeTextType="uniform"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_alignLeft="@+id/loginlinear"
            android:layout_alignRight="@+id/loginlinear"
            android:layout_marginBottom="20dp"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/main"
                android:textSize="20dp"
                android:layout_marginBottom="7dp"
                android:text="Еще не смешарик?"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ЗАРЕГИСТРИРОВАТЬСЯ"
                android:autoSizeTextType="uniform"
                android:padding="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
