<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="7dp"
    android:elevation="20dp"
    android:background="@drawable/diag_grid_white_background">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardclickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/chaticon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@color/main"
            android:theme="@style/Icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/chatname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/loading"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/lastmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:maxLines="1"
                android:maxLength="30"
                android:textSize="20dp"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0">
            <TextView
                android:id="@+id/lastmessagecnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_messages_counter"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:visibility="invisible"
                android:text="15"
                android:textSize="22dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:elevation="10dp"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/lastmessagetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="end"
                android:text=""
                android:maxLines="1"
                android:maxLength="30"
                android:textSize="20dp"
                android:textAppearance="?attr/textAppearanceListItem" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_height="7dp"
        android:layout_width="match_parent"
        android:background="#9F2C17"/>
</LinearLayout>